extends ../../layouts/default.pug 


block main 

    .container.my-5 
        .row.justify-content-center 
            .col-8 
                h1(class="text-center") Lay lai mat khau
                form(
                    action="/user/password/forgot"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email 
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required 
                        )
                    div(class="form-group")
                        label(for="email") Email 
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Gui email xac nhan